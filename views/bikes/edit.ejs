<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=bike.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/bikes/<%=bike._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=bike.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%=bike.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%=bike.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/bikes">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>